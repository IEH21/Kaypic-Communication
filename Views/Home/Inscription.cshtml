@model Web3_kaypic.Models.Inscription
@{
    ViewData["Title"] = "Inscription";
}

<head>
    <link rel="stylesheet" href="~/css/SignIn.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <section class="formulaire" style="height: 100vh; display: flex; justify-content: center; align-items: center; flex-direction: column;">
        <i class="fa-regular fa-user fa-3x"></i><br />

        <!--  Message d’erreur -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert" style="background-color:#f8d7da; color:#842029; border-left:6px solid #dc3545; padding:10px; border-radius:10px; width:320px; text-align:center;">
                @ViewBag.ErrorMessage
            </div>
        }

        <!-- ✅ Message de succès -->
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert" style="background-color:#d1e7dd; color:#0f5132; border-left:6px solid #198754; padding:10px; border-radius:10px; width:320px; text-align:center;">
                @ViewBag.SuccessMessage
            </div>
        }

        <!-- ✅ Formulaire qui reste sur la même page -->
        <form asp-controller="Inscription" asp-action="Inscription" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Prenom" class="form-control" placeholder="Votre prénom" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Nom" class="form-control" placeholder="Votre nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Courriel" class="form-control" placeholder="Votre courriel" />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>

            <!-- Ajout champ pour le numéro de téléphone -->
            <div class="form-group">
                <input asp-for="NumeroTelephone" class="form-control" placeholder="Ex: +15145551234" />
                <span asp-validation-for="NumeroTelephone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="MotDePasse" type="password" class="form-control" placeholder="Mot de passe" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmerMotDePasse" type="password" class="form-control" placeholder="Confirmer mot de passe" />
                <span asp-validation-for="ConfirmerMotDePasse" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary" style="width: 100%;">S'inscrire</button>
        </form>

        <p style="text-align:center; margin-top:1rem;">
            Déjà un compte ?
            <a asp-controller="Connexion" asp-action="Connexion" style="color:#9e3b42;">Se connecter</a>
        </p>
    </section>
</body>
