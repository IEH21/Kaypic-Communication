@model web3_kaypic.Models.ApplicationUser
@{
    ViewData["Title"] = "Profil";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #6b1f24 0%, #9e3b42 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .profile-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .profile-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .profile-banner {
            height: 200px;
            background: linear-gradient(135deg, #9e3b42 0%, #c9484e 100%);
            position: relative;
        }

        .profile-avatar-section {
            display: flex;
            justify-content: center;
            margin-top: -80px;
            position: relative;
            z-index: 10;
        }

        .profile-avatar {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            background: white;
            border: 6px solid white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 64px;
            color: #9e3b42;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

            .profile-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .profile-info {
            padding: 30px 40px;
            text-align: center;
        }

        .profile-name {
            font-size: 32px;
            font-weight: bold;
            color: #6b1f24;
            margin-bottom: 5px;
        }

        .profile-email {
            color: #666;
            font-size: 16px;
            margin-bottom: 30px;
        }

        .profile-details {
            padding: 0 40px 40px;
        }

        .detail-section {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
        }

        .detail-title {
            font-size: 18px;
            font-weight: bold;
            color: #6b1f24;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-label {
            color: #666;
            font-weight: 500;
        }

        .detail-value {
            color: #333;
            font-weight: 600;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 30px;
        }

        .btn-action {
            padding: 12px 30px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 16px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: #9e3b42;
            color: white;
        }

            .btn-primary:hover {
                background: #6b1f24;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(158, 59, 66, 0.4);
            }

        .alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .alert-success {
            background-color: #d1e7dd;
            color: #0f5132;
            border-left: 6px solid #198754;
        }
    </style>
</head>

<body>
    @Html.Partial("Header")
    <div class="profile-container">
        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <!-- Profile Card -->
        <div class="profile-card">
            <div class="profile-banner"></div>

            <div class="profile-avatar-section">
                <div class="profile-avatar">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" alt="Photo de profil" />
                    }
                    else
                    {
                        <i class="fa-solid fa-user"></i>
                    }
                </div>
            </div>

            <div class="profile-info">
                <h1 class="profile-name">@Model.FirstName @Model.LastName</h1>
                <p class="profile-email">@Model.Email</p>
            </div>

            <div class="profile-details">
                <div class="detail-section">
                    <div class="detail-title">
                        <i class="fa-solid fa-user"></i>
                        Informations personnelles
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Prénom</span>
                        <span class="detail-value">@Model.FirstName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Nom</span>
                        <span class="detail-value">@Model.LastName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Téléphone</span>
                        <span class="detail-value">@(Model.PhoneNumber ?? "Non renseigné")</span>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="@Url.Action("Edit", "Profil")" class="btn-action btn-primary">
                        <i class="fa-solid fa-pen"></i> Modifier le profil
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
