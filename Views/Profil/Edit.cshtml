@model web3_kaypic.Models.TEditProfile
@{
    ViewData["Title"] = "Modifier le profil";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #6b1f24 0%, #9e3b42 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .edit-container {
            max-width: 700px;
            margin: 0 auto;
        }

        .edit-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .edit-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .edit-title {
            font-size: 28px;
            font-weight: bold;
            color: #6b1f24;
            margin-bottom: 10px;
        }

        .edit-subtitle {
            color: #666;
        }

        /* Photo de profil */
        .profile-image-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .current-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border: 4px solid #9e3b42;
            overflow: hidden;
        }

            .current-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .current-image i {
                font-size: 60px;
                color: #9e3b42;
            }

        .image-upload-btn {
            display: inline-block;
            padding: 10px 20px;
            background: #9e3b42;
            color: white;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s;
            margin-right: 10px;
        }

            .image-upload-btn:hover {
                background: #6b1f24;
            }

        .delete-image-btn {
            display: inline-block;
            padding: 10px 20px;
            background: #dc3545;
            color: white;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

            .delete-image-btn:hover {
                background: #a02834;
            }

        /* Formulaire */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            color: #6b1f24;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: #9e3b42;
            }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        /* Boutons */
        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 14px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 16px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-save {
            background: #9e3b42;
            color: white;
        }

            .btn-save:hover {
                background: #6b1f24;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(158, 59, 66, 0.4);
            }

        .btn-cancel {
            background: #f8f9fa;
            color: #333;
            border: 2px solid #e0e0e0;
        }

            .btn-cancel:hover {
                background: #e0e0e0;
            }
    </style>
</head>

<body>
    @Html.Partial("Header")
    <div class="edit-container">
        <div class="edit-card">
            <div class="edit-header">
                <h1 class="edit-title">Modifier mon profil</h1>
                <p class="edit-subtitle">Mettez à jour vos informations personnelles</p>
            </div>

            <form asp-action="Edit" asp-controller="Profil" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Photo de profil -->
                <div class="profile-image-section">
                    <div class="current-image">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
                        {
                            <img id="profileImagePreview" src="@Model.CurrentProfileImageUrl" alt="Photo de profil" />
                        }
                        else
                        {
                            <i id="profileImageIcon" class="fa-solid fa-user"></i>
                            <img id="profileImagePreview" src="" alt="Preview" style="display:none;" />
                        }
                    </div>

                    <label for="profileImageInput" class="image-upload-btn">
                        <i class="fa-solid fa-camera"></i> Changer la photo
                    </label>
                    <input type="file"
                           id="profileImageInput"
                           name="ProfileImage"
                           accept="image/*"
                           style="display: none;"
                           onchange="previewImage(this)">

                    @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
                    {
                        <button type="button" class="delete-image-btn" onclick="deleteProfileImage()">
                            <i class="fa-solid fa-trash"></i> Supprimer
                        </button>
                    }

                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <!-- Prénom -->
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">Prénom</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Votre prénom" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Nom -->
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Nom</label>
                    <input asp-for="LastName" class="form-control" placeholder="Votre nom" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Téléphone -->
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Téléphone</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1 514 555-1234" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Boutons -->
                <div class="button-group">
                    <button type="submit" class="btn btn-save">
                        <i class="fa-solid fa-check"></i> Sauvegarder
                    </button>
                    <a href="@Url.Action("Profil", "Profil")" class="btn btn-cancel">
                        <i class="fa-solid fa-xmark"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Preview de l'image avant upload
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profileImagePreview').src = e.target.result;
                    document.getElementById('profileImagePreview').style.display = 'block';
                    var icon = document.getElementById('profileImageIcon');
                    if (icon) icon.style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Supprimer la photo de profil
        async function deleteProfileImage() {
            if (!confirm('Êtes-vous sûr de vouloir supprimer votre photo de profil ?')) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("DeleteProfileImage", "Profil")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const data = await response.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur lors de la suppression');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Erreur lors de la suppression');
            }
        }
    </script>
</body>
